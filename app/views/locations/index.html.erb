<!-- START OF SEARCH FOR restaurant -->
<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-6"><h2>Find restaurants by location</h2></div>
    <div class="col-md-2"></div>
  </div>

  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="City or Zipcode" aria-describedby="basic-addon2">
      </div>
    </div>
    <div class="col-md-4"></div>
  </div>

  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="btn-group">
